{
  "name": "leetcode-ts",
  "private": true,
  "packageManager": "pnpm@9.0.0",
  "scripts": {
    "new": "tsx packages/src/new-problem.ts",
    "test": "vitest run",
    "test:watch": "vitest",
    "build:data": "tsx packages/src/build-data.ts",
    "build:site": "pnpm -C apps/site build",
    "build": "pnpm build:data && pnpm build:site",
    "dev": "npm-run-all --parallel dev:*",
    "dev:data": "tsx packages/src/build-data.ts --watch",
    "dev:site": "pnpm -C apps/site dev --open",
    "lint": "eslint .",
    "format": "prettier -w .",
    "type-check": "tsc --noEmit"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "concurrently": "^8.2.0",
    "eslint": "^9.0.0",
    "prettier": "^3.0.0",
    "npm-run-all": "^4.1.5",
    "tsx": "^4.0.0",
    "typescript": "^5.0.0",
    "vitest": "^1.0.0"
  },
  "dependencies": {
    "zod": "^3.22.0",
    "commander": "^11.0.0",
    "chalk": "^5.3.0",
    "inquirer": "^9.2.0",
    "shiki": "^0.14.0"
  }
}

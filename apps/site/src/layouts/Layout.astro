---
export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en" class="h-full">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="LeetCode TypeScript Solutions" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body class="h-full bg-gray-50 dark:bg-gray-900">
    <div class="min-h-full">
      <nav class="bg-white dark:bg-gray-800 shadow">
        <div class="container mx-auto px-4">
          <div class="flex justify-between h-16">
            <div class="flex items-center">
              <a href="/leetcode-ts/" class="text-xl font-bold text-gray-900 dark:text-white">
                LeetCode TS
              </a>
            </div>
            <div class="flex items-center space-x-4">
              <a href="/leetcode-ts/" class="text-gray-600 dark:text-gray-300 hover:text-gray-900 dark:hover:text-white">
                Problems
              </a>
            </div>
          </div>
        </div>
      </nav>
      
      <slot />
    </div>
  </body>
</html>
